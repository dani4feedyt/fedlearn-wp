FROM tensorflow/tensorflow:2.11.1-gpu

WORKDIR /app

# Install system packages
RUN apt-get update && apt-get install -y \
    python3-pip python3-dev \
    libglib2.0-0 libsm6 libxrender1 libxext6 libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY server/requirements.txt .

# Do NOT install another TensorFlow; already included.
RUN pip3 install --no-cache-dir -r requirements.txt --no-deps

COPY server /app

EXPOSE 5000

CMD ["python3", "main.py"]
